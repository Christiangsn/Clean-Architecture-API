generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String       @id       @default(uuid())
  name            String       
  email           String
  password        String
  accessToken     String?
  role            String?

  @@map("users")
}

model logsError {
  id              String       @id       @default(uuid())
  stack           String   
  created_at      DateTime               @default(now())

  @@map("log_erros")
}

model Survey {
  id              String       @id       @default(uuid())
  question        String       
  answers         SurveyAnswers[]

}

model SurveyAnswers {
  id              String       @id       @default(uuid()) 
  image           String?
  answer          String

  surveryId       String
  surveyAnswer    Survey       @relation(fields: [surveryId], references: [id])
  
}
{
  "compilerOptions": {
    "target": "es2019",                          
    "module": "commonjs",                     
    "lib": ["es6"],       
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",      
    "removeComments": true,                  
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                         
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {   
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@domain/*": ["src/domain/*"],
      "@infra/*": ["src/infra/*"],
      "@presentation/*": ["src/presentation/*"],
      "@util/*": ["src/util/*"],
      "@data/*": ["src/data/*"]
      }
  },
  "include": [
    "src/**/*",
    "/.eslintrc.json",
  ],
}